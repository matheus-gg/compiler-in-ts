{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": "build/*",
    "rules": {
        "prettier/prettier": "error",
        "global-require": "warn",
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "curly": [
            "warn",
            "multi-or-nest"
        ],
        "nonblock-statement-body-position": 0,
        "no-underscore-dangle": 0,
        "newline-per-chained-call": 0,
        "function-paren-newline": 0,
        "operator-linebreak": 0,
        "radix": 0,
        "object-curly-newline": 0,
        "prefer-destructuring": [
            "warn",
            {
                "VariableDeclarator": {
                    "object": true,
                    "array": false
                },
                "AssignmentExpression": {
                    "object": false,
                    "array": false
                }
            }
        ],
        "implicit-arrow-linebreak": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "packageDir": [
                    "."
                ]
            }
        ],
        "import/prefer-default-export": 0,
        "max-len": 0,
        "indent": 0,
        "no-console": [
            "warn",
            {
                "allow": [
                    "error",
                    "warn",
                    "info",
                    "debug"
                ]
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "allow",
                "tsx": "never",
                "mjs": "never"
            }
        ],
        "@typescript-eslint/ban-ts-comment": 0
    }
}